        console.log("upper Count is ", upperCount);
      }
      break;
    case 2:
      numberCount++;
      console.log("number Count is ", numberCount);
      break;
    case 3:
      specialCount++;
      console.log("special Count is ", specialCount);
      break;
  }
}


function decrementCount(index) {
  switch (index) {
    case 0:
      lowerCount--;
      console.log("lower Count is ", lowerCount);
      break;
    case 1:
      upperCount--;
      console.log("upper Count is ", upperCount);
      break;
