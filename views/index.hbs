      numberCount--;
      console.log("number Count is ", numberCount);
      break;
    case 4:
      specialCount--;
      console.log("special Count is ", specialCount);
      break;
  }
}

function checkCount() {
  if (lowerCount <= 1) {
    checklist[0].classList.remove("checked");
    lowerCount = 0;
  }

  if (upperCount <= 1) {
    checklist[1].classList.remove("checked");
    upperCount = 0;
  }

  if (numberCount <= 1) {
    checklist[2].classList.remove("checked");
    numberCount = 0;
  }

  if (specialCount <= 0) {
    checklist[4].classList.remove("checked");
    specialCount = 0;
  }
}

function resetValues() {
  lowerCount = 0;
  upperCount = 0;
  numberCount = 0;
  specialCount = 0;

  for (let i = 0; i < checklist.length; i++) {
    checklist[i].classList.remove("checked");
